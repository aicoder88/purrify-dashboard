# Environment Configuration for Purrify Dashboard
# Copy this file to .env.local and fill in your values

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# Application URLs
NEXT_PUBLIC_APP_URL=https://dashboard.purrify.ca
NEXT_PUBLIC_API_URL=https://api.purrify.ca
NEXT_PUBLIC_CDN_URL=https://cdn.purrify.ca

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://dashboard.purrify.ca

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/purrify_dashboard
REDIS_URL=redis://localhost:6379

# Analytics & Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_MOBILE_OPTIMIZATIONS=true

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000

# Cache Configuration
CACHE_TTL_DEFAULT=300000
CACHE_TTL_STATIC=86400000
CACHE_TTL_API=60000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@purrify.ca

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Development Only
NEXT_PUBLIC_ENABLE_DEVTOOLS=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_DEBUG_MODE=false

# Third-party Integrations
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Social Media Integration
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_API_KEY=your-linkedin-api-key
FACEBOOK_API_KEY=your-facebook-api-key

# Backup & Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=purrify-dashboard-backups

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're performing scheduled maintenance. Please check back soon.