{
  "name": "purrify-dashboard",
  "version": "1.0.0",
  "description": "Modern sales analytics dashboard for Purrify.ca - Real-time insights, beautiful visualizations, and comprehensive business metrics.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out dist",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.79.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "chart.js": "^4.0.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.0.0",
    "html2canvas": "^1.4.1",
    "jose": "^5.0.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.300.0",
    "next": "14.2.35",
    "postcss": "^8.4.0",
    "react": "^18.0.0",
    "react-chartjs-2": "^5.0.0",
    "react-dom": "^18.0.0",
    "react-select": "^5.10.1",
    "recharts": "^2.15.3",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "zod": "^4.3.3",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "dashboard",
    "analytics",
    "sales",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "purrify"
  ],
  "author": "Purrify Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/purrify/dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/purrify/dashboard/issues"
  },
  "homepage": "https://dashboard.purrify.ca"
}
